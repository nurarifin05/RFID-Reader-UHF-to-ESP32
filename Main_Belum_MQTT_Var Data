#include "Arduino.h"
#define RXD2 16
#define TXD2 17
unsigned char incomingByte;
String nol = "0";
String karakter ;
String Str1;
int Panjang;
String Data;
void sendIdentifyCmd ()
{
  Serial2.write (0x7c);    
  Serial2.write (0xff);
  Serial2.write (0xff);  
  Serial2.write (0x01);                  
  Serial2.write (0x08);                  
  Serial2.write (0x7d);              
#ifdef DEBUG
  Serial.print (0x7c);
  Serial.print (0xff);
  Serial.print (0xff);
  Serial.print (0x01);
  Serial.print (0x08);
  Serial.print (0x7d);
  Serial.println ();
#endif
}
void setup ()
{
  Serial.begin (57600);
  Serial2.begin(57600, SERIAL_8N1, RXD2, TXD2);
  Serial2.println("serial2test");
  Serial.println ("begin initial Serial!\n");
}
void loop ()
{
  sendIdentifyCmd ();
  delay (1);
  while(Serial2.available () > 0)
  {
      incomingByte=Serial2.read ();
      karakter = String(incomingByte,HEX);
      Panjang = karakter.length();
      if(Panjang == 1){
        //Serial.print("0"+karakter);
        Str1="0"+karakter;
        
      }else{
      //Serial.print (karakter);s
      Str1=karakter;
      } 
      Data = Data + Str1;
  } 
  if(Data != ""){
  Serial.print(Data);
  Data="";}
  delay (1000);
}
